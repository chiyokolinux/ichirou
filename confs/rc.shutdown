#!/bin/sh

echo
echo "---------------------------------"
echo "| ichirou init system - halting |"
echo "---------------------------------"
echo

/bin/hwclock $HWCLOCK_PARAMS /dev/rtc0

echo syncing filesystems
/bin/sync
/bin/sleep 3

echo disabling swap
swapoff -a &>/dev/null

echo unmounting filesystems
/bin/umount -a -r &>/dev/null
